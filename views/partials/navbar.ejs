<div class="navbar bg-base-100 shadow-lg relative z-[9999]">
  <div class="flex-1">
    <a class="btn btn-ghost text-xl" href="/">National Historic Sites</a>
  </div>
  <div class="flex-none">
    <ul class="menu menu-horizontal px-1">
      <li>
        <a class="<%= (page == '/') ? 'active' : '' %>" href="/">Home</a>
      </li>
      <li>
        <a class="<%= (page == '/sites') ? 'active' : '' %>" href="/sites">View Site Collection</a>
      </li>
      <li>
        <a class="<%= (page == '/about') ? 'active' : '' %>" href="/about">About</a>
      </li>
      <% if (session.user) { %>
      <li class="relative z-[9999]">
        <details class="relative z-[9999]">
          <summary>Account: <%= session.user.userName %></summary>
          <ul class="absolute top-full right-0 p-2 bg-base-100 z-[9999]">
            <li>
              <a class="<%= (page == '/addSite') ? 'active' : '' %>" href="/addSite">Add to Collection</a>
            </li>
            <li>
              <a class="<%= (page == '/userHistory') ? 'active' : '' %>" href="/userHistory">User History</a>
            </li>
            <li>
              <a href="/logout">Log Out</a>
            </li>
          </ul>
        </details>
      </li>
      <% } else { %>
      <li class="relative z-[9999]">
        <details class="relative z-[9999]">
          <summary>Account</summary>
          <ul class="absolute top-full right-0 p-2 bg-base-100 z-[9999]">
            <li>
              <a class="<%= (page == '/login') ? 'active' : '' %>" href="/login">Login</a>
            </li>
            <li>
              <a class="<%= (page == '/register') ? 'active' : '' %>" href="/register">Register</a>
            </li>
          </ul>
        </details>
      </li>
      <% } %>
    </ul>
  </div>
</div>
