<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Site: <%= site.site %></title>
  <link href="/css/main.css" rel="stylesheet">
</head>
<body class="bg-gray-100">

  
  <%- include('partials/navbar', { page: '' }) %>

  
  <div class="hero bg-base-200 p-6 text-center">
    <div class="hero-content">
      <h1 class="text-4xl font-bold">Edit Site</h1>
      <p class="mt-2">Update details for <span class="font-semibold"><%= site.site %></span> below</p>
    </div>
  </div>


  <div class="container mx-auto p-6">
    <form method="POST" action="/editSite" class="grid gap-4 max-w-lg mx-auto">
      
      <label class="block">
        <span class="font-semibold">Site ID (read-only)</span>
        <input
          type="text"
          name="id"
          value="<%= site.siteId %>"
          readonly
          class="input input-bordered w-full mt-1 bg-gray-100 cursor-not-allowed"
        />
      </label>

      
      <label class="block">
        <span class="font-semibold">Site Name</span>
        <input
          type="text"
          name="site"
          value="<%= site.site %>"
          required
          class="input input-bordered w-full mt-1"
        />
      </label>

      
      <label class="block">
        <span class="font-semibold">Image URL</span>
        <input
          type="url"
          name="image"
          value="<%= site.image %>"
          required
          class="input input-bordered w-full mt-1"
        />
      </label>

      
      <label class="block">
        <span class="font-semibold">Date</span>
        <input
          type="number"
          name="date"
          value="<%= site.date %>"
          required
          class="input input-bordered w-full mt-1"
        />
      </label>

      
      <label class="block">
        <span class="font-semibold">Date Type</span>
        <input
          type="text"
          name="dateType"
          value="<%= site.dateType %>"
          required
          class="input input-bordered w-full mt-1"
        />
      </label>

      
      <label class="block">
        <span class="font-semibold">Designated</span>
        <input
          type="number"
          name="designated"
          value="<%= site.designated %>"
          required
          class="input input-bordered w-full mt-1"
        />
      </label>

      
      <label class="block">
        <span class="font-semibold">Location</span>
        <input
          type="text"
          name="location"
          value="<%= site.location %>"
          required
          class="input input-bordered w-full mt-1"
        />
      </label>

      
      <label class="block">
        <span class="font-semibold">Province / Territory Code</span>
        <select
          name="provinceOrTerritoryCode"
          required
          class="select select-bordered w-full mt-1"
        >
          <% provincesAndTerritories.forEach(pt => { %>
            <option
              value="<%= pt.code %>"
              <%= (site.provinceOrTerritoryCode == pt.code) ? "selected" : "" %>
            >
              <%= pt.name %>
            </option>
          <% }) %>
        </select>
      </label>

      
      <label class="block">
        <span class="font-semibold">Description</span>
        <textarea
          name="description"
          class="textarea textarea-bordered w-full mt-1"
        ><%= site.description %></textarea>
      </label>

     
      <label class="block">
        <span class="font-semibold">Latitude</span>
        <input
          type="number"
          name="latitude"
          step="0.00000001"
          value="<%= site.latitude %>"
          required
          class="input input-bordered w-full mt-1"
        />
      </label>

      
      <label class="block">
        <span class="font-semibold">Longitude</span>
        <input
          type="number"
          name="longitude"
          step="0.00000001"
          value="<%= site.longitude %>"
          required
          class="input input-bordered w-full mt-1"
        />
      </label>

      
      <label class="inline-flex items-center mt-2">
        <input
          type="checkbox"
          name="worldHeritageSite"
          class="checkbox"
          <%= site.worldHeritageSite ? "checked" : "" %>
        />
        <span class="ml-2">Is WorldHeritageSite</span>
      </label>

      
      <button type="submit" class="btn btn-primary mt-4">
        Update Site
      </button>

      
      <a href="/deleteSite/<%= site.siteId %>" class="btn btn-error mt-4">
        Delete Site
      </a>
    </form>
  </div>

  <footer class="footer footer-center bg-base-300 text-base-content p-4 mt-8">
    <aside>
      <p>Copyright Â© 2025 - All rights reserved by National Historic Sites</p>
    </aside>
  </footer>

</body>
</html>
